{% extends 'order/show.html.twig' %}

{# Status Control #}
{% block control_btn_area %}
<div class="btn-group">
    <a href="{{ path("order_validation", {id: order.id, idStatus: order_status_quote.id}) }}"
        class="btn btn-success btnValidation">Convertir en devis</a>
    <a href="{{ path("order_validation", {id: order.id, idStatus: order_status_refund.id}) }}"
        class="btn btn-danger btnValidation">Convertir en avoir</a>
    <a href="{{ path("order_validation", {id: order.id, idStatus: order_status_valid.id}) }}"
        class="btn btn-warning btnValidation">Revalidation client</a>
</div>
{% endblock %}

{# Produits #}
{% block product_area %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">
                        <i class="fa fa-align-justify"></i> Liste des produits et tarifs
                    </div>
                    <div class="col-md-1">
                        <a class="btn btn-primary" id="btnAddItem" href="#" data-status="{{ order.status.name }}"><i
                                class="fa fa-plus"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="order_detail_table_js"
                    class="table table-responsive-md table-bordered table-striped table-md">
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block close_btn_area %}
    {% if  bill_data_source != '[]' %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Clôture de la commande
                </div>
                <div class="card-body">
                    <a href="{{  path("order_validation", {id: order.id, idStatus: status_close.id })}}"
                        class="btn btn-danger btnValidation">Etape 3/3 Confirmer l'expédition de tous les élements</a>

                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}

{# Email devis #}
{% block email_area %}
<form action="{{ path("order_email_bill",{id: order.id }) }}" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Email
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                <label for="emailSubject">Object</label>
                                <input type="text" name="order_detail_form[setting][email][subject]" id="emailSubject"
                                    class="form-control"
                                    value="** {{ search.get_setting("SOCIETE","SOCIETE_NOM").value }} Votre facture **">
                            </div>
                            <div class="form-group">
                                <label for="emailBody">Message</label>
                                <textarea name="order_detail_form[setting][email][body]" id="" cols="30" rows="10"
                                    class="form-control">{{ email_content }}</textarea>
                            </div>
                            <div class="form-group">
                                <label for="emailBody">Factures</label>
                                <select name="order_detail_form[setting][email][bill]" class="form-control">
                                    {% for bill in bills %}
                                    <option value="{{ bill.id }}">
                                        {{ search.get_setting("PDF","FACTURE_PREFIX").value ~ bill.id }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <input type="submit" value="Envoyer" class="btn btn-primary">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
