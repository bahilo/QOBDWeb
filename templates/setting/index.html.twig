{% extends 'template_coreui.html.twig' %}


{% block title %}{{ parent() }}{% endblock %}

{% block home_path %}
<li class="breadcrumb-item">    
    Securit√© & Configuration
</li>
{% endblock %}

{% block body_header_right %}
    {% if app.user.isadmin %}
        <a href="{{ create_url }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
    {% endif %}
{% endblock %}


{% block body %}
    {% block content_area %}
    
    {% set code = codes[0] %}
    <div class="example-wrapper">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            {% block body_title_are %}{% endblock %}
                        <div class="card-body">
    
                            <table id="{{ code }}_setting_target_table_js"
                                class="table table-responsive-md table-bordered table-striped table-md">
                            </table>
                            <input type="hidden" id="{{ code }}_setting_target" data-source="{{ data_table_source }}">
                            <input type="hidden" id="setting_target_tables" value="{{ codes | json_encode() }}">
    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {% endblock %}
{% endblock %}

{% block access_pool %}
<div class="access_pool">
    <input type="hidden" id="is_read" value="{{ search.get_right_read("ACTION_SETTING") }}" />
    <input type="hidden" id="is_write" value="{{ search.get_right_write("ACTION_SETTING") }}" />
    <input type="hidden" id="is_update" value="{{ search.get_right_update("ACTION_SETTING") }}" />
    <input type="hidden" id="is_delete" value="{{ search.get_right_delete("ACTION_SETTING") }}" />
    <input type="hidden" id="is_mail" value="{{ search.get_right_email("ACTION_SETTING") }}" />
    <input type="hidden" id="is_read_sensible" value="{{ search.get_right_read("ACTION_SENSIBLE") }}" />
    <input type="hidden" id="is_admin" value="{{ search.get_right_admin() }}" />
</div>
{% endblock %}

{% block javascripts %} 
<script src="{{ asset('js/setting.js','theme_default') }}"></script>
{% endblock %}
