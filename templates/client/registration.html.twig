{% extends 'template_coreui.html.twig' %}

{% set page_title = 'Nouveau client' %}

{% block home_path %}
<li class="breadcrumb-item">
    <a href="{{ path("client_home") }}">Clients</a>
</li>
<li class="breadcrumb-item">
    {{ page_title }}
</li>
{% endblock %}

{% block title %}{{ parent() }} - {{ page_title }} {% endblock %}

{% block body_header_right %}
    <button form="global_form" type="submit" class="btn btn-primary"><i class="fa fa-save"></i></button>
    {% if formClient.vars.data.id > 0 %}
    <a href="{{ path("client_show",{id: formClient.vars.data.id}) }}" class="btn btn-secondary"><i class="fa fa-undo"></i></a>
    <a href="{{ path("client_delete",{id: formClient.vars.data.id}) }}" class="btn btn-danger btnDelete"><i class="fa fa-trash"></i></a>
    {% endif %}
{% endblock %}

{% block body %}

<div class="client-wrapper">

    <div class="animated fadeIn">

        {% include "notify.html.twig" %}
        
        {{ form_start(formClient, { 'attr': {'id': 'global_form' }}) }}
        
        {# Société #}
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Société</div>
            <div class="card-body">

                <!-- <label class="c-switch c-switch-label c-switch-primary">
                    <input class="c-switch-input" type="checkbox" checked="">
                    <span class="c-switch-slider" data-checked="On" data-unchecked="Off"></span>
                </label> -->

                <div class="c-switch-wrapper">
                    <span class="badge badge-success">Client</span>
                    <label class="c-switch c-switch-label c-switch-primary">
                        {% if formClient.vars.data.IsProspect %}
                        <input name="client_registration[client_prospect]" class="c-switch-input" type="checkbox">
                        {% else %}
                        <input name="client_registration[client_prospect]" class="c-switch-input" type="checkbox" checked>
                        {% endif %}
                        <span class="c-switch-slider" data-checked="Oui" data-unchecked="Non"></span>
                    </label>
                    <span class="badge badge-warning">Prospect</span>
                </div>
                <br />
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Société">
                            <i class="fa fa-building"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.CompanyName,{'label': 'Société','attr': {'placeholder': 'Société'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Dénomination">
                            <i class="fa fa-chess-board"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.Denomination,{'label': 'Dénomination','attr': {'placeholder': 'Dénomination'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="RIB">
                            <i class="fa fa-university"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.Rib,{'label': 'RIB','attr': {'placeholder': 'Rib'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Kbis">
                            <i class="fa fa-university"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.CRN,{'label': 'Kbis','attr': {'placeholder': 'kbis'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Délais de paiement">
                            <i class="fa fa-hourglass"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.PayDelay,{'label': 'Délais de paiement', 'attr': {'placeholder': 'Délais de paiement'}})
                    }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Encours Max">
                            <i class="fa fa-history"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.MaxCredit,{'label': 'Encours Max', 'attr': {'placeholder': 'Encours Max'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top"
                            title="Commentaire général sur le client">
                            <i class="fa fa-comments"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.ClientComment,{'label': 'Commentaire général sur le client', 'attr': {'placeholder': 'Commentaire général sur le client'}})
                    }}
                </div>
        
            </div>
        </div>
        
        {# Contact #}
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Contact Principal</div>
            <div class="card-body">
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Prénom">
                            <i class="fa fa-id-card"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.FirstName,{'label': 'Prénom','attr': {'placeholder': 'Prénom'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Nom">
                            <i class="fa fa-id-card"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.LastName,{'label': 'Nom','attr': {'placeholder': 'Nom'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Email">
                            <i class="fa fa-envelope"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.Email,{'label': 'Email','attr': {'placeholder': 'Email...'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Numéro de téléphone">
                            <i class="fa fa-phone"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.Phone,{'label': 'Numéro de téléphone','attr': {'placeholder': 'Numéro de téléphone'}})
                    }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Fax">
                            <i class="fa fa-blender-phone"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.Fax,{'label': 'Fax','attr': {'placeholder': 'Fax'}}) }}
                </div>
        
            </div>
        </div>
        
        {# Adresse #}
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Adresse</div>
            <div class="card-body">
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Adresse">
                            <i class="fa fa-map-marked-alt"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.Street,{'label': 'Adresse', 'attr': {'placeholder': 'Adresse'}}) }}
                </div>
        
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Code Postal">
                            <i class="fa fa-map-marked-alt"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.ZipCode,{'label': 'Code Postal', 'attr': {'placeholder': 'Code Postal'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Ville">
                            <i class="fa fa-map-marked-alt"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.City,{'label': 'Ville', 'attr': {'placeholder': 'Ville'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top" title="Pays">
                            <i class="fa fa-map-marked-alt"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.Country,{'label': 'Pays', 'attr': {'placeholder': 'Pays'}}) }}
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" data-toggle="tooltip" data-placement="top"
                            title="Commentaire sur l\'adresse">
                            <i class="fa fa-comments"></i>
                        </span>
                    </div>
                    {{ form_widget(formClient.AddressComment,{'label': 'Commentaire sur l\'adresse', 'attr': {'placeholder': 'Commentaire sur l\'adresse'}})
                    }}
                </div>
        
            </div>
        </div>
        
        {{ form_end(formClient) }}
    </div>

</div>

{% endblock %}
{% block javascripts %}
<!-- <script src="{#{  asset('client.js','qobd_web_js') }#}"></script> -->
{% endblock %}