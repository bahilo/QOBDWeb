{% block body %}

<div class="item-wrapper">

    <div class="container">
        <h1>Création d'un produit !</h1>

        {{ form_start(formItem) }}


        {{form_row(formItem.Picture,{'label': 'Picture', 'attr': {'placeholder': ''}}) }}
