{% extends 'setting/index.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block home_path %}
{{ parent() }}
<li class="breadcrumb-item">
    Administration
</li>
<li class="breadcrumb-item">
    Configuration
</li>
{% endblock %}

{% block content_area %}

{% for code in codes %}
<div class="example-wrapper">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> {{ code }}</div>
                    <div class="card-body">

                        <table id="{{ code }}_setting_target_table_js"
                            class="table table-responsive-md table-bordered table-striped table-md">
                        </table>
                        <input type="hidden" id="{{ code  }}_setting_target" data-source="{{ data_table_source }}">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endfor %}


<input type="hidden" id="setting_target_tables" value="{{ codes | json_encode() }}">

{% endblock %}