{% extends 'template_coreui.html.twig' %}

{% set page_title = 'Editer tax' %}

{% block home_path %}
<li class="breadcrumb-item">
    <a href="{{ path("setting_home") }}">Configuration</a>
</li>
<li class="breadcrumb-item">
    {{ page_title }}
</li>
{% endblock %}

{% block title %}{{ parent() }} - {{ page_title }} {% endblock %}

{% block body_header_right %}
    <button form="global_form" type="submit" class="btn btn-primary"><i class="fa fa-save"></i></button>
{% endblock %}

{% block body %}

<div class="tax-wrapper">

    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> {{ page_title }}</div>
                    <div class="card-body">

                        {% include "notify.html.twig" %}

                        {{ form_start(formTax, { 'attr': {'id': 'global_form' }}) }}

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" data-toggle="tooltip" data-placement="top"
                                    title="Clé utilisée dans le code pour faire référence à la configuration">
                                    <span class="fa fa-chess-board"></span>
                                </span>
                            </div>
                            {{ form_widget(formTax.Type,{'label': 'désignation de la Tax', 'attr': {'placeholder': 'désignation de la Tax'}})
                            }}
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" data-toggle="tooltip" data-placement="top"
                                    title="Clé utilisée dans le code pour faire référence à la configuration">
                                    <span class="fa fa-copyright"></span>
                                </span>
                            </div>
                            {{ form_widget(formTax.Value,{'label': 'Valeur', 'attr': {'placeholder': 'Valeur'}}) }}
                        </div>
                        
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" data-toggle="tooltip" data-placement="top"
                                    title="Clé utilisée dans le code pour faire référence à la configuration">
                                    <span class="fa fa-layer-group"></span>
                                </span>
                            </div>
                            {{ form_widget(formTax.CommentContent,{'label': 'Commentiare', 'attr': {'placeholder': 'Commentaire'}}) }}
                        </div>

                        {{ form_row(formTax.IsCurrent, {'label': 'TVA par défaut'}) }}
                        {{ form_row(formTax.IsTVAMarge, {'label': 'TVA/Marge'}) }}

                        {{ form_end(formTax) }}
                    </div> 
                </div> 
            </div> 
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
<!-- <script src="{#{  asset('client.js','qobd_web_js') }#}"></script> -->
{% endblock %}