{% extends 'template_coreui.html.twig' %}

{% set page_title = 'Clients' %}

{% block home_path %}
<li class="breadcrumb-item">
    {{ page_title }}
</li>
{% endblock %}

{% block title %}{{ page_title }} {% endblock %}


{% block body_header_right %}
<a href="{{ path("client_registration") }}" class="btn"><i class="fa fa-plus"></i></a>
{% endblock %}

{% block body %}

<div class="client-wrapper">    
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> {{ page_title }}</div>
                    <div class="card-body">

                        <table id="client_table_js" class="table table-responsive-md table-bordered table-striped table-md">
                        </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="client_data_source" value="{{ client_data_source }}">
{% endblock %}
{% block javascripts %}
<script src="{{  asset('client.js','qobd_web_js') }}"></script>
{% endblock %}