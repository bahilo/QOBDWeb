{% extends 'template_coreui.html.twig' %}

{% block title %}Nouvel Agent{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

<div class="client-wrapper">

    <div class="container">
        <h1>Création d'un Client !</h1>

        {{ form_start(formClient) }}


        {{ form_row(formClient.FirstName,{'label': 'Prénom','attr': {'placeholder': 'Prénom'}}) }}
        {{ form_row(formClient.LastName,{'label': 'Nom','attr': {'placeholder': 'Nom'}}) }}
        {{ form_row(formClient.Email,{'label': 'Email','attr': {'placeholder': 'Email...'}}) }}
        {{ form_row(formClient.CompanyName,{'label': 'Société','attr': {'placeholder': 'Société'}}) }}
        {{ form_row(formClient.Denomination,{'label': 'Dénomination','attr': {'placeholder': 'Dénomination'}}) }}
        {{ form_row(formClient.Phone,{'label': 'Numéro de téléphone','attr': {'placeholder': 'Numéro de téléphone'}}) }}
        {{ form_row(formClient.Fax,{'label': 'Fax','attr': {'placeholder': 'Fax'}}) }}
        {{ form_row(formClient.Rib,{'label': 'RIB','attr': {'placeholder': 'Rib'}}) }}
        {{ form_row(formClient.CRN,{'label': 'Kbis','attr': {'placeholder': 'kbis'}}) }}
        {{ form_row(formClient.PayDelay,{'label': 'Délais de paiement', 'attr': {'placeholder': 'Délais de paiement'}}) }}
        {{ form_row(formClient.MaxCredit,{'label': 'Encours Max', 'attr': {'placeholder': 'Encours Max'}}) }}
        {{ form_row(formClient.AddressName,{'label': 'Intitulé de l\'address', 'attr': {'placeholder': 'Intitulé de l\'address'}}) }}
        {{ form_row(formClient.Street,{'label': 'Adresse', 'attr': {'placeholder': 'Adresse'}}) }}
        {{ form_row(formClient.ZipCode,{'label': 'Code Postal', 'attr': {'placeholder': 'Code Postal'}}) }}
        {{ form_row(formClient.City,{'label': 'Ville', 'attr': {'placeholder': 'Ville'}}) }}
        {{ form_row(formClient.Country,{'label': 'Pays', 'attr': {'placeholder': 'Pays'}}) }}
        {{ form_row(formClient.ClientComment,{'label': 'Commentaire général sur le client', 'attr': {'placeholder': 'Commentaire général sur le client'}}) }}
        {{ form_row(formClient.AddressComment,{'label': 'Commentaire sur l\'adresse', 'attr': {'placeholder': 'Commentaire sur l\'adresse'}}) }}
        {{ form_row(formClient.IsProspect) }}

        <button type="submit" class="btn btn-success">Ajouter l'agent</button>

        {{ form_end(formClient) }}
    </div>

</div>

