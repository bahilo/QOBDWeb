{% extends 'base.html.twig' %}

{% block title %}Page de login{% endblock %}

{% block stylesheets %} 
    <link rel="stylesheet" href="{{ asset('agent.css', 'qobd_web_css') }}">
{% endblock %}

{% block body %}

    <div class="login-wrapper">
        
        <div class="container">
            <h1>Page d'authentification !</h1>

            <form action="{{ path('security_login')}}" method="POST">
                <div class="form-group">
                    <input type="text" name="_username" id="" class="form-control" placeholder="pseudo ..." required>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" id="" class="form-control" placeholder="Mot de passe">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion!</button>
                </div>
            </form>

        </div>

    </div>

{% endblock %}
{% block javascripts %} 
    <script src="{{  asset('agent.js','qobd_web_js') }}"></script>
{% endblock %}
