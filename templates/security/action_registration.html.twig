{% extends 'template_coreui.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="agent-wrapper">
        
    <div class="container">
        <h1>Création d'une action !</h1>

        {{ form_start(formAction) }}

        
        {{ form_row(formAction.Name,{'label': 'Nom','attr': {'placeholder': 'Nom'}}) }}
        {{ form_row(formAction.DisplayName,{'label': 'Nom à l\'affichage','attr': {'placeholder': 'Nom affichage'}}) }}
        
        <button type="submit" class="btn btn-success">Ajouter l'agent</button>

        {{ form_end(formAction) }}
    </div>

</div>
{% endblock %}
