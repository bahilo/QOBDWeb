{% extends 'template_coreui.html.twig' %}

{% set page_title = 'Agents' %}

{% block home_path %}
<li class="breadcrumb-item">
    Security<!-- Security<a href="{#{ path("security_home") }#}">Security</a> -->
</li>
<li class="breadcrumb-item">
    {{ page_title }}
</li>
{% endblock %}

{% block title %}{{ parent() }} -{{ page_title }} {% endblock %}

{% block stylesheets %} 
    <link rel="stylesheet" href="{{ asset('agent.css', 'qobd_web_css') }}">
{% endblock %}

{% block body_header_right %}
    {% if search.get_right_write("ACTION_SECURITY") %}
        <a href="{{ path("security_registration") }}" class="btn"><i class="fa fa-plus"></i></a>
    {% endif %}
{% endblock %}

{% block body %}

    <div class="agent-wrapper">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i>{{ page_title }}</div>
                        <div class="card-body">
                            <table id="agent_table_js" class="table table-responsive-md table-bordered table-striped table-md">
                            </table>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="agent_data_source" value="{{ agents_data_source }}">

{% endblock %}

{% block access_pool %}
<div class="access_pool">
    <input type="hidden" id="is_read" value="{{ search.get_right_read("ACTION_SECURITY") }}" />
    <input type="hidden" id="is_write" value="{{ search.get_right_write("ACTION_SECURITY") }}" />
    <input type="hidden" id="is_update" value="{{ search.get_right_update("ACTION_SECURITY") }}" />
    <input type="hidden" id="is_delete" value="{{ search.get_right_delete("ACTION_SECURITY") }}" />
    <input type="hidden" id="is_mail" value="{{ search.get_right_email("ACTION_SECURITY") }}" />
    <input type="hidden" id="is_admin" value="{{ search.get_right_admin() }}" />
</div>
{% endblock %}

{% block javascripts %} 
    <script src="{{  asset('agent.js','qobd_web_js') }}"></script>
{% endblock %}
