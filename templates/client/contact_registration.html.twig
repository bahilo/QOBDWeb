{% extends 'template_coreui.html.twig' %}

{% set page_title = 'Nouveau contact' %}

{% block home_path %}
<li class="breadcrumb-item">
    <a href="{{ path("client_home") }}">Clients</a>
</li>
<li class="breadcrumb-item">
    {{ page_title }}
</li>
{% endblock %}

{% block title %}{{ parent() }} - {{ page_title }} {% endblock %}

{% block body %}

<div class="contact-wrapper">

    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> {{ page_title }}</div>
                    <div class="card-body">

                        {{ form_start(formContact, { 'attr': {'id': 'global_form' }}) }}


                        {{ form_row(formContact.Firstname,{'label': 'Prénom','attr': {'placeholder': 'Prénom'}}) }}
                        {{ form_row(formContact.LastName,{'label': 'Nom','attr': {'placeholder': 'Nom'}}) }}
                        {{ form_row(formContact.Position,{'label': 'Position','attr': {'placeholder': 'Position'}}) }}
                        {{ form_row(formContact.Email,{'label': 'Email','attr': {'placeholder': 'Email...'}}) }}
                        {{ form_row(formContact.Phone,{'label': 'Numéro de téléphone','attr': {'placeholder': 'Numéro de téléphone'}}) }}
                        {{ form_row(formContact.Mobile,{'label': 'Mobile','attr': {'placeholder': 'Mobile'}}) }}
                        {{ form_row(formContact.Fax,{'label': 'Fax','attr': {'placeholder': 'Fax'}}) }}
                        
                        {{ form_row(formContact.AddressName,{'label': 'Intitulé de l\'address', 'attr': {'placeholder': 'Intitulé de l\'address'}}) }}
                        {{ form_row(formContact.Street,{'label': 'Adresse', 'attr': {'placeholder': 'Adresse'}}) }}
                        {{ form_row(formContact.ZipCode,{'label': 'Code Postal', 'attr': {'placeholder': 'Code Postal'}}) }}
                        {{ form_row(formContact.City,{'label': 'Ville', 'attr': {'placeholder': 'Ville'}}) }}
                        {{ form_row(formContact.Country,{'label': 'Pays', 'attr': {'placeholder': 'Pays'}}) }}
                        {{ form_row(formContact.ContentComment,{'label': 'Commentaire sur le contact','attr': {'placeholder': 'Commentaire'}}) }}
                        {{ form_row(formContact.AddressComment,{'label': 'Commentaire sur l\'adresse', 'attr': {'placeholder': 'Commentaire sur l\'adresse'}})
                        }}
                        
                        {{ form_row(formContact.IsPrincipal) }}

                        {{ form_end(formContact) }}
                    </div> 
                </div> 
            </div> 
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
